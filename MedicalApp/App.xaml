        <Style TargetType="TextBox" x:Key="searchBox">
            <Setter Property="Margin" Value="22 16 25 11"/>
            <Setter Property="Padding" Value="10 6 0 0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2d283e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="20" Margin="{TemplateBinding Margin}" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Please enter text..."
                                           FontStyle="Italic"
                                           Foreground="#564f6f"
                                           Margin="12 7"
                                           FontSize="13"
                                           x:Name="filigranText"
                                           Visibility="Visible"/>
                                <ScrollViewer 
                                    x:Name="PART_ContentHost"
                                    Focusable="False"
                                    HorizontalScrollBarVisibility="Hidden"
                                    VerticalScrollBarVisibility="Hidden"
                                    HorizontalAlignment="Stretch"
                                    Foreground="{TemplateBinding Foreground}"/>
                                <Icon:PackIconMaterial Kind="Loupe" Foreground="#2d283e" Width="20" Height="25" Grid.Column="1" Margin="10 5"/>

                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">

                                <Setter TargetName="filigranText" Property="Visibility" Value="Collapsed"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#802BB1" Duration="0:0:0:.2" Storyboard.TargetProperty="(Border.BorderBrush).Color"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="{x:Null}" Duration="0:0:0:.2" Storyboard.TargetProperty="(Border.BorderBrush).Color"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text, Converter={StaticResource convertIsEmptyToVisibility}}" Value="False">
                                <Setter Property="Visibility" TargetName="filigranText" Value="Collapsed"
/>
                            </DataTrigger>
                            
                        </ControlTemplate.Triggers>
                        
                    </ControlTemplate>
                    
                </Setter.Value>
            </Setter>
        </Style>

