<UserControl x:Class="MedicalApp.Dialogs.ClientDeleteDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicalApp.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800"
             HorizontalAlignment="Center"
             VerticalAlignment="Center">
    <Grid Width="300" Height="150" Background="LightSalmon">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".5*"/>

        </Grid.RowDefinitions>
        <TextBlock Text="Are you sure you want to delete this item?" Margin="20 20" FontSize="12" />
        <StackPanel Orientation="Horizontal" Margin="25,44,-5,26">
            <Button Content="OK" Click="DeleteButton_Click" Width="48" Background="MediumSeaGreen" Height="14" FontSize="8"/>
            <Button Content="Cancel" FontSize="8" Click="CancelButton_Click" Width="48" Margin="10 0" Background="PaleVioletRed" Height="14"/>
        </StackPanel>
    </Grid>
</UserControl>
